<% content_for :css do
    stylesheet_link_tag 'welcomeindex'
end %>

<div class="row">

  <div class="jumbotron col-lg-10 col-md-12" style="background-color:grey;"></div>

    <div class="jumbotron col-lg-2 col-md-12">

      <div id="newsFlash" class="updates">NEWS</div>

        <div class="holder">
          <ul id="newsPosts" class="">
            <%#= it will go in loop manner %>
            <% News.all.each do |news| %>
                <li class="card">
                  <div class="card-body">
                    <%= news.created_at.strftime('%m/%d/%Y') %><br/>
                     <%= news.message %>
                  </div>
                </li>
            <% end %>
          </ul>
        </div>

      </div>

    </div>

</div>
